{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "lib": [
      "es6",
      "dom"
    ],
    "strictNullChecks": false,
    "pretty": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "lib",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
